<?xml version="1.0" encoding="utf-8"?>
<templates>

<t t-name="web_studio.AppCreator">
    <div class="o_web_studio_app_creator">
        <div class="o_web_studio_app_creator_box">
            <div class="o_web_studio_app_creator_left">
                <div class="o_web_studio_app_creator_left_content"/>
                <div class="o_web_studio_app_creator_buttons">
                    <button type="button" class="btn btn-icon fa fa-arrow-left o_app_creator_back"/>
                    <button type="button" class="btn btn-primary o_web_studio_app_creator_next">Next</button>
                </div>
            </div>
            <div class="o_web_studio_app_creator_right">
                <button type="button" title="Leave Studio" class="btn btn-icon o_web_studio_app_creator_leave">&#10799;</button>
                <div class="o_web_studio_app_creator_right_content"/>
            </div>
        </div>
    </div>
</t>

<t t-name="web_studio.AppCreator.Welcome">
    <span>Welcome to</span>
    <h1 class="mb32 mt8">Odoo Studio</h1>
    <span>The fastest way to create a web application.</span>
</t>

<div t-name="web_studio.AppCreator.Form">
    <h3> Create your App </h3>
    <div>
        <label for="name">Name</label>
        <input name="name" placeholder="My App" type="text"/>
    </div>
    <div class="mt16">
        <label for="name">Model</label>
        <div class="js_model"/>
    </div>
</div>

<t t-name="web_studio.AppCreator.NewApp">
    <a class="o_app o_web_studio_new_app" href="#">
        <img class="o_app_icon" src="/web_enterprise/static/src/img/default_icon_app.png"/>
        <div class="o_caption">New App</div>
    </a>
</t>

</templates>
