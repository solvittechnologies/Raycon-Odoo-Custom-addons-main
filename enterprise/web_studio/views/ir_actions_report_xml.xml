<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="act_report_xml_view_kanban" model="ir.ui.view">
        <field name="name">ir.actions.report.xml.kanban</field>
        <field name="model">ir.actions.report.xml</field>
        <field name="arch" type="xml">
            <kanban class="o_web_studio_report_kanban" js_class="studio_report_kanban" create="0">
                <field name="name"/>
                <field name="report_name"/>
                <field name="report_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i t-if="record.report_type.value == 'PDF'" class="fa fa-file-pdf-o"/>
                                <i t-else="1" class="fa fa-file-o"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div><field name="report_name" groups="base.group_no_one"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
